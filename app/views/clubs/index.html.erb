<div class="ui grid center aligned">
  <div class="ten wide column">
    <h2>All Clubs</h2>
    <div class="ui grid center aligned">
      <% @clubs.each do |clubs_column| %>
        <div class="four wide column">
          <%= render(:partial => 'partials/club_column', :locals => {:clubs => clubs_column}) %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="two wide column">
    <h2>Add Club</h2>
    <%= form_for(@club, class: 'ui form') do |f| %>
      <div class="field">
        <%= f.label :name, 'Club Name' %>
        <%= f.text_field :name, placeholder: 'Awesome Co. Club' %>
      </div>
      <div class="field">
        <%= f.label :city %>
        <%= f.text_field :city, placeholder: 'Sydney' %>
      </div>
      <div class="field">
        <%= f.label :state, 'State / Province / County' %>
        <%= f.text_field :state, placeholder: 'NY' %>
      </div>
      <div class="field">
        <%= f.label :country, 'Country' %>
        <%= render 'partials/country_selector' %>
      </div>
      <button class="ui button" type="submit">Submit</button>
    <% end %>
  </div>
</div>

<%= javascript_include_tag 'clubs', 'data-turbolinks-track' => true %>
