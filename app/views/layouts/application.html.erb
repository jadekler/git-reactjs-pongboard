            <a class="<%= 'active' if current_page?('/leaderboard') %> item" href="leaderboard">Leaderboard</a>
            <a class="<%= 'active' if current_page?('/about') %> item" href="/about">About</a>
        </div>
        <%= yield %>
    </body>
</html>
