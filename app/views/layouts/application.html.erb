<!-- index.html -->
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <title>Table Tennis Leaderboard</title>
        <%= stylesheet_link_tag "application", media: "all" %>
    </head>
    <body>
        <div class="ui inverted teal four item menu app-header">
            <a class="<%= 'active' if current_page?('/') %> item" href="/">Clubs</a>

            <% if params[:club] %>
                <a class="<%= 'active' if current_page?(action: 'feed') %> item" href="feed">Feed</a>
                <a class="<%= 'active' if current_page?(action: 'leaderboard') %> item" href="leaderboard">Leaderboard</a>
            <% end %>

            <a class="<%= 'active' if current_page?('/about') %> item" href="/about">About</a>
        </div>
        <%= yield %>
    </body>
</html>
