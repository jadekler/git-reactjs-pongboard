<div class="ui grid center aligned">
  <div class="ten wide column">
    <h2>All Clubs</h2>
    <div class="ui grid center aligned">
      <div class="four wide column">
        <%= render(:partial => 'partials/club_column', :locals => {:clubs => @clubs_1_step}) %>
      </div>
      <div class="four wide column">
        <%= render(:partial => 'partials/club_column', :locals => {:clubs => @clubs_2_step}) %>
      </div>
      <div class="four wide column">
        <%= render(:partial => 'partials/club_column', :locals => {:clubs => @clubs_3_step}) %>
      </div>
    </div>
  </div>
  <div class="two wide column">
    <h2>Add Club</h2>
    <%= form_tag({controller: 'club', action: 'create'}, method: 'post', class: 'ui form') do %>
      <div class="field">
        <label>Club Name</label>
        <input name="club-name" placeholder="Awesome Co. Club" type="text">
      </div>
      <div class="field">
        <label>City</label>
        <input name="city" placeholder="Sydney" type="text">
      </div>
      <div class="field">
        <label>State / Province / County</label>
        <input name="state" placeholder="NY" type="text">
      </div>
      <div class="field">
        <label>Country</label>
        <%= render 'partials/country_selector' %>
      </div>
      <button class="ui button" type="submit">Submit</button>
    <% end %>
  </div>
</div>

<%= javascript_include_tag 'clubs', 'data-turbolinks-track' => true %>
